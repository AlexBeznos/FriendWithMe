!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "FriendWithMe"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag "paper", :media => "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)
  %body
    .container
      = render 'shared/alert'
      = yield

    .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-sm
        .modal-content= render 'accounts/form'

    .modal.fade.bs-example-modal-sm_message{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-md
        .modal-content= render 'messages/form'

    / Fixed navbar
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to 'Friend With Me', root_path, :class => "navbar-brand"
        .navbar-collapse.collapse.pull-right
          %ul.nav.navbar-nav
            %li=link_to "Dashboard", root_path
            %li
              %a{:href => "#about"} About
            %li
              %a{:href => "#contact"} Contact
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Logs
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#{root_url}logs/development"} Development
                %li
                  %a{:href => "#{root_url}logs/test"} Test
                %li
                  %a{:href => "#{root_url}logs/production"} Production
                %li.divider
                %li.dropdown-header Nav header
                %li
                  %a{:href => "#"} Separated link
                %li
                  %a{:href => "#"} One more separated link
        / /.nav-collapse
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "paper"
    = yield(:page_javascript) if content_for?(:page_javascript)
